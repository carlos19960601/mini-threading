}

.preview-canvas {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.controller-container {
  display: flex;
  flex-direction: row;
}

.source-view {
  flex:1;
  display: flex;
  flex-direction: column;
}

.source-view image{
  width: 100%;
  max-height: 70%;
}

.controller-view{
  flex:2;
  display: flex;
  flex-direction: column;
  padding: 10px;
}

.controller-setting{
  margin-top: 5px;
}

.param-text {
  font-size: 30rpx;
  font-weight: bold;
}

.param-title {
  font-size: 20rpx;
}

.param-view {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.radio-group{
  font-size: 20rpx;
}

