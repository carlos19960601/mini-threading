/**index.wxss**/
.full-view {
  height: 100vh;
  overflow: hidden;
}

.preview-canvas {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.controller-container {
  display: flex;
  flex-direction: row;
}

.source-view {
  flex:1;
  flex-direction: column;
  justify-content: space-around;
}

.source-view image{
  width: 200rpx;
  height: 200rpx;
}

.controller-view{
  flex:2;
  display: flex;
  flex-direction: column;
  padding: 10px;
}

.controller-setting{
  margin-top: 5px;
}

.param-text {
  font-size: 30rpx;
  font-weight: bold;
}

.param-title {
  font-size: 20rpx;
}

.param-view {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.radio-group{
  font-size: 20rpx;
}

.slider-view {
  flex: 1;
  margin: 5px 18px;
}

.radio-group {
  margin-left: 42rpx;
}

wx-radio .wx-radio-input {
  width: 24rpx;
  height: 24rpx;
}

.button-view {
  display: flex;
  flex-direction: row;
}